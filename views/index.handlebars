<div class="container">
  <div class="row">
    <div class="col-lg">
      <header>BURGERS!</header>
    </div>
  </div>

  <div class="row">
    <div class="col-md">
      <h2>Eat These!</h2>
      <hr>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md">
      <h2>Make a Burger</h2>
      <hr>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burger_name" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-md">
      <h2>These are Gone!</h2>
      <hr>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
